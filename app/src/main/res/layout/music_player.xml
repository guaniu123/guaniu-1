<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/back_to_square_from_help"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quit"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/down"/>

        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="播放器"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="230dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/share"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:background="@mipmap/music_player_bg"
            android:src="@mipmap/tonghua3"/>

        <co.mobiwise.playerview.MusicPlayerView
            android:id="@+id/mpv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            app:textSize = "14sp"
            app:textColor = "#80FFFFFF"
            app:buttonColor = "#ff0028"
            app:progressLoadedColor = "#00815e"/>
    </RelativeLayout>

    <LinearLayout
        android:background="#CDC9C9"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/zan"/>
        <TextView
            android:textColor="#000000"
            android:text="100个"
            android:layout_marginLeft="3dp"
            android:layout_width="50dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/music_player_discuss"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/pinglun" />
        <TextView
            android:textColor="#000000"
            android:text="10条"
            android:layout_width="30dp"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/zhuanfa" />


        <TextView
            android:textColor="#000000"
            android:text="112个"
            android:layout_width="50dp"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="18dp"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:text="01:25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#bcbcbc"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cycle"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="47dp"
            android:src="@mipmap/pevious"/>
        <ImageView
        android:src="@mipmap/play_music"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:layout_width="30dp"
        android:layout_height="30dp" />
        <ImageView
            android:src="@mipmap/next"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>