<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000">
    </TextView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/square_image_picture"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/square_title_picture"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:id="@+id/time_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/square_text_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:src="@mipmap/katong1"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="105dp"
        android:layout_width="160dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="105dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/zan"/>
        <TextView
            android:id="@+id/zan_picture"
            android:layout_marginLeft="3dp"
            android:layout_width="50dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/zan_detail_picture"
            android:focusable="false"
            android:layout_marginLeft="30dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/pinglun" />
        <TextView
            android:id="@+id/pinglun_picture"
            android:layout_width="30dp"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp" />

</LinearLayout>